platform :ios, '15.0'
use_frameworks!

target 'App' do
  # Add your Pods here
  # No external dependencies required - using only native iOS frameworks
end

post_install do |installer|
  # Only run if pods project exists and has targets
  if installer.pods_project && installer.pods_project.targets.any?
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        config.build_settings['ENABLE_USER_SCRIPT_SANDBOXING'] = 'NO'
      end
    end
  end
end
